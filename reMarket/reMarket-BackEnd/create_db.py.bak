import psycopg2
from psycopg2.extensions import ISOLATION_LEVEL_AUTOCOMMIT

def create_database():
    # Connect to PostgreSQL server
    conn = psycopg2.connect(
        user="postgres",
        password="postgres",  # Replace with your actual password
        host="localhost",
        port="5432"
    )
    conn.set_isolation_level(ISOLATION_LEVEL_AUTOCOMMIT)
    
    # Create a cursor object
    cursor = conn.cursor()
    
    # Check if database exists
    cursor.execute("SELECT 1 FROM pg_catalog.pg_database WHERE datname = 'remarketdb'")
    exists = cursor.fetchone()
    
    if not exists:
        # Create database
        cursor.execute("CREATE DATABASE remarketdb")
        print("Database 'remarketdb' created successfully")
    else:
        print("Database 'remarketdb' already exists")
    
    # Close connection
    cursor.close()
    conn.close()

if __name__ == "__main__":
    create_database()